@model DT191G_projekt.Models.Recipe

@{
    ViewData["Title"] = "Delete";
}

<h1>Radera recept</h1>

<h3>Är du säker att du vill radera detta recept?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Namn
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            Beskrivning
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Radera" class="btn btn-danger" /> |
        <a asp-action="Index">Tillbaka till översikt</a>
    </form>
</div>
