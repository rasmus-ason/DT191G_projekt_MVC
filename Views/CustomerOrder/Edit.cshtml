                <span asp-validation-for="Adress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ZipCode" class="control-label"></label>
                <input asp-for="ZipCode" class="form-control" />
                <span asp-validation-for="ZipCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PurchaseDate" class="control-label"></label>
                <input readonly asp-for="PurchaseDate" class="form-control" />
                <span asp-validation-for="PurchaseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalPrice" class="control-label"></label>
                <input asp-for="TotalPrice" class="form-control" />
                <span asp-validation-for="TotalPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShippingCost" class="control-label"></label>
                <input asp-for="ShippingCost" class="form-control" />
                <span asp-validation-for="ShippingCost" class="text-danger"></span>
            </div>

           
                <div class="form-group">
                    <label asp-for="IsPacked" class="control-label"></label>
                    <div>
                        <label><input type="radio" asp-for="IsPacked" value="true" onchange="alert('Notera att status ändras!')"> Ja</label>
                        <label><input type="radio" asp-for="IsPacked" value="false" onchange="alert('Notera att status ändras!')"> Nej</label>
                    </div>
                    <span asp-validation-for="IsPacked" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IsShipped" class="control-label"></label>
                    <div>
                        <label><input type="radio" asp-for="IsShipped" value="true" onchange="alert('Notera att status ändras!')"> Ja</label>
                        <label><input type="radio" asp-for="IsShipped" value="false" onchange="alert('Notera att status ändras!')"> Nej</label>
                    </div>
                    <span asp-validation-for="IsShipped" class="text-danger"></span>
                </div>
       

            <div class="form-group">
                <input type="submit" value="Spara ändringar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="javascript:void(0);" onclick="goBackToPreviousPage()">Tillbaka</a>
</div>

@* Add a fall back if javascript function not working in browser *@
<script>
function goBackToPreviousPage() {
    try {
        window.history.back();
    } catch(e) {
        window.location.href = '@Url.Action("Index", "CustomerOrder")';
    }
}
</script>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
